<div class="container pt-5">
  {{#if celebrity.isNew }}
    <h2>New Celebrity</h2>
    <form action="/celebrities/new" method="post">
  {{else}}
    <h2>Edit Celebrity</h2>
    <form action="/celebrities/{{celebrity._id}}/new" method="post">
  {{/if}}
    <div class="form-group">
      <label for="formGroupExampleInput">Name</label>
      <input type="text" name="name" class="form-control" value="{{celebrity.name}}">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput">Occupation</label>
      <input type="text" name="occupation" class="form-control" value="{{celebrity.occupation}}">
    </div>
      <div class="form-group">
        <label for="formGroupExampleInput">Cath phrase</label>
        <input type="text" name="catchPhrase" class="form-control" value="{{celebrity.catchPhrase}}">
    </div>
  
    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
</form>
</div>



