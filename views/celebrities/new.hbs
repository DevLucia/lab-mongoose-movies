
{{#if celebrity.isNew }}
  <h2>New Celebrity</h2>
  <form action="/celebrities/new" method="post">
{{else}}
  <h2>Edit Celebrity</h2>
  <form action="/celebrities/{{celebrity._id}}/edit" method="post">
{{/if}}
  <div>
    Name:<input type="text" name="name" value="{{celebrity.name}}">
  </div>
  <div>
    Occupation:<input type="text" name="occupation" value="{{celebrity.occupation}}">
  </div>
    <div>
    Catch Phrase:<input type="text" name="catchPhrase" value="{{celebrity.catchPhrase}}">
  </div>

  <button type="submit">Submit</button>
</form>