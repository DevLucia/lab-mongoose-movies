<div class="container pt-5">
  {{#if movie.isNew }}
    <h2>New movie</h2>
    <form action="/movies/new" method="post">
  {{else}}
    <h2>Edit movie</h2>
    <form action="/movies/{{movie._id}}/new" method="post">
  {{/if}}
    <div class="form-group">
      <label for="formGroupExampleInput">Title</label>
      <input type="text" name="title" class="form-control" value="{{movie.title}}">
    </div class="form-group">
    <div class="form-group">
      <label for="formGroupExampleInput">Genre:</label>
      <input type="text" name="genre" class="form-control" value="{{movie.genre}}">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput">Plot:</label>
      <input type="text" name="plot" class="form-control" value="{{movie.plot}}">
    </div>
    <div class="form-group">
      <label for="celebrity">Celebrity</label>
      <select class="form-control"  name="celebrity">
        {{#each celebrities as |celebrity|}}
          <option value="{{celebrity.id}}">{{celebrity.name}}</option>
        {{/each}}
      </select>
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
  </form>
</div>